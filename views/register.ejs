  <body style="background-color:black;">
        <% include ./header.ejs %>
        <form class="form-signin" action="/login/signup" method="POST">
  
          <h1 class="h3 mb-3 font-weight-normal text-center" style="color:white;"><br>Sign Up</h1>
          <br>
          <% include ./messages %>
          
          <div class="form-label-group">
          <input
            name="email"
            type="email" 
            id="inputEmail" 
            class="form-control" 
            placeholder="Email address" 
            value="<%= typeof email != 'undefined' ? email : '' %>"
            required 
            autofocus
          >
          <label for="inputEmail">Email address</label>
        </div>
        <div class="form-label-group">
          <input 
            
            name="username"
            type="text" 
            id="inputEmail" 
            class="form-control" 
            placeholder="Username"
            value = "<%= typeof username != 'undefined' ? username : '' %>" 
            required
          >
          <label for="inputUsername">Username</label>
        </div>
        <div class="form-label-group">
          
          <input 
            
            name="phone" 
            id="inputEmail" 
            class="form-control"
            type="tel" 
            minlength="10" 
            maxlength="10" 
            placeholder="Phone Number" 
            pattern="[0-9]{10}" 
            required
            value = "<%= typeof phone != 'undefined' ? phone : '' %>"
          >
          <label for="inputUsername">Phone Number</label>
        </div>
        <div class="form-label-group">
          
          <input 
            
            type="text" 
            name="dob" 
            id="inputEmail" 
            class="form-control"
            onfocus="(this.type = 'date')" 
            onblur="(this.type = 'text')" 
            placeholder="DOB" 
            required
            value = "<%= typeof dob != 'undefined' ? dob : '' %>"
          >
          <label for="inputDOB">Date of Birth</label>
        </div>
        <div class="form-label-group">
          
          <input 

            name="password"
            type="password" 
            id="inputEmail" 
            class="form-control" 
            placeholder="Password (min 6 characters)" 
            value = "<%= typeof password != 'undefined' ? password : '' %>"
            required
          >
          <label for="inputUsername">Password</label>
        </div>
          <br>
          <!--
          <div class="checkbox mb-3">
            <label>
              <input 
                type="checkbox" 
                value="remember-me"
              > Remember me
            </label>
          </div> -->
          <button class="btn btn-lg btn-info btn-block" type="submit">Submit</button>
          <div class="d-flex">
            <h6 class="mt-3 mb-3 text-muted text-left" >Already Registered?
              <a href="/login/">Login</a>
            </h6>
              <a href="/login/facebook"
                class="btn btn-lg btn-outline-primary ml-auto mt-3"
                data-toggle="tooltip" data-placement="bottom" title="Register using Facebook">
                <i class="fab fa-facebook-f" style="color:white;"></i>
            </a>
          </div>
          <br><br>
          <p class="mt-5 mb-3 text-muted text-center">&copy; Made by Tabish Aleem, 2018-19</p>
    </form>

    <script>
      $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip(); 
      });
    </script>
</body>

</html>
