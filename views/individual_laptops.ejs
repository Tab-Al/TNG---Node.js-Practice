<html lang="en">
<head>
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  	<title>T-S-T Store</title>
  	<link rel="stylesheet" href="/css/individual.css">
    <link rel="stylesheet" href="/css/welcomepage.css">
    <link rel="stylesheet" href="/css/products.css">
  	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body style="margin-left: 60px; margin-right: 60px; margin-top: 30px;">

<% include ./navbar.ejs %>
<div class="deals">
  <% for(var i of laptop) { %>
      <p class="heading">Product Page for : <%= i.id %></p>
      <img class="product_image" src="/images/lap/<%= i.id %>.jpg">
      <div class="left">
          <p>Model no : <%= i.id %></p>
          <p>Price : <%= i.price %></p>
          <p>Brand : <%= i.brand %></p>
          <p>Discount : <%= i.discount %></p>
          <br>
          <% if(user){ %>
            <a href="/addtocart/l/<%= i.id %>"><button class="button1">ADD TO CART</button></a>
          <%}else{%>
            <button class="button1" onclick="alert('Please LOGIN to access CART')">ADD TO CART (login reqd)</button>
          <%}%>
      </div>
  <% } %>
</div>
<% include ./footer.ejs %>
<script src="/js/js.js"></script>
</body>
<html>
